{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LeanSpec Desktop",
  "version": "0.1.0",
  "identifier": "dev.leanspec.desktop",
  "mainBinaryName": "leanspec-desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm --dir ../.. --filter @leanspec/ui build && pnpm prepare:ui && pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "LeanSpec Desktop",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "capabilities": ["desktop-main"]
    }
  },
  "bundle": {
    "resources": [
      "ui-standalone"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "targets": "all",
    "createUpdaterArtifacts": "v1Compatible",
    "macOS": {
      "minimumSystemVersion": "11.0",
      "exceptionDomain": "localhost",
      "signingIdentity": null
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "wix": {
        "language": "en-US",
        "bannerPath": "icons/banner.bmp"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": ["https://updates.lean-spec.dev/desktop.json"],
      "pubkey": ""
    }
  }
}
